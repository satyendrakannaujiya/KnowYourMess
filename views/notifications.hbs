<!DOCTYPE html>
<html>
{{>header}}
<body>
  <div class="wrapper ">
    <div class="main-panel" style="width: 100%;">
    {{>nav}}
    <div class="content">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title">Notifications</h4>
        </div>
        {{#each topNotifications}}
        <div class="card-body">
          <div class="alert alert-info">
            <span>
              <b>{{title}} </b>
              <br>{{text}}</span>
            <br>
            <div class="row">
              <div class="col-lg-6">
                <b>{{date}}</b>
              </div>
              <div class="col-lg-6" style="text-align: right;">
                --{{name}}
              </div>
            </div>
             {{#ifCond hid ../user.hostel_id}}
            <form action="/deleteNotification" method="post">
            <input type="hidden" name="nid" value="{{nid}}">
              <button type="submit" aria-hidden="true" class="close danger" style="border-radius: 4px; background-color:red">
                <i class="now-ui-icons ui-1_simple-remove"></i>
              </button>
            </form>
            {{/ifCond}}
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    </div>
    </div>
    </div>
    {{>footer}}
</body>
</html>




